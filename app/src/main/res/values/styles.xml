<resources>

    <style name="AppTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.NoActionBar"/>

    <style name="SplashTheme" parent="BaseTheme">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>


    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light.NoActionBar</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
    </style>
</resources>
